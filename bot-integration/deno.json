{
  "name": "@eco-bot/integration",
  "version": "0.1.0",
  "exports": "./src/Main.res.js",
  "tasks": {
    "build:rescript": "rescript build",
    "watch:rescript": "rescript build -w",
    "clean": "rescript clean",
    "start": "deno run --allow-net --allow-env --allow-read src/Main.res.js",
    "dev": "deno run --watch --allow-net --allow-env --allow-read src/Main.res.js",
    "test": "deno test --allow-net --allow-env --allow-read",
    "lint": "deno lint",
    "fmt": "deno fmt"
  },
  "imports": {
    "@std/http": "jsr:@std/http@^1.0.0",
    "@std/log": "jsr:@std/log@^0.224.0",
    "@std/dotenv": "jsr:@std/dotenv@^0.225.0",
    "@std/crypto": "jsr:@std/crypto@^1.0.0"
  },
  "compilerOptions": {
    "strict": true,
    "allowJs": true
  },
  "lint": {
    "rules": {
      "tags": ["recommended"]
    }
  },
  "fmt": {
    "useTabs": false,
    "lineWidth": 100,
    "indentWidth": 2,
    "singleQuote": false
  }
}
